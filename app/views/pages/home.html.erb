<div class='left'>
  <% form_for(:session, :url => sessions_path) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>
    <div class="actions center">
      <%= f.submit "登  录" %>
    </div>
  <% end  %>
  <p class="center"><%= link_to '立即注册','#' %>&nbsp;&nbsp;<%= link_to '忘记密码?','#' %></p>
 </div>


 <div class="right">
   <%= image_tag('bottom.png') %>
 </div>
